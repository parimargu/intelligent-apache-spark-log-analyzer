# Application Settings
APP_NAME=Intelligent Apache Spark Log Analyzer
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Settings (SQLite for dev, PostgreSQL for prod)
DATABASE_URL=sqlite:///./spark_logs.db
# DATABASE_URL=postgresql://user:password@localhost:5432/spark_logs

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
API_KEY_HEADER=X-API-Key

# LLM Provider Settings
DEFAULT_LLM_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview

# Google Gemini
GEMINI_API_KEY=
GEMINI_MODEL=gemini-pro

# Anthropic
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Groq
GROQ_API_KEY=
GROQ_MODEL=mixtral-8x7b-32768

# OpenRouter
OPENROUTER_API_KEY=
OPENROUTER_MODEL=openai/gpt-4-turbo-preview

# Ollama (Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Log Ingestion Settings
LOG_UPLOAD_DIR=./uploads
LOG_WATCH_DIR=./watch
MAX_UPLOAD_SIZE_MB=100
SUPPORTED_EXTENSIONS=.log,.txt,.gz,.zip

# Background Task Settings
WATCH_POLL_INTERVAL_SECONDS=30
